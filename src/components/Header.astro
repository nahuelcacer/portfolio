---
import ThemeSwitcher from "./ThemeSwitcher.jsx";
---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2 py-2"
>
    <nav
        class="flex px-3 p-1.5 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center gap-4 w-[90%] md:w-1/3"
    >
        <a href="#experiencie" class="hover:scale-105 transition">Experiencia</a>
        <a href="#projects" class="hover:scale-105 transition">Proyectos</a>
        <a href="#about" class="hover:scale-105 transition">Sobre mi</a>
        <ThemeSwitcher client:load />
    </nav>
</header>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const nav = document.querySelector("nav");

        window.addEventListener("scroll", function () {
            if (window.scrollY > window.innerHeight * 0.2) {
                nav.classList.add(
                    "backdrop-blur-md",
                    "bg-white",
                    "shadow-md",
                    "dark:bg-gray-900",
                );
            } else {
                nav.classList.remove(
                    "backdrop-blur-md",
                    "bg-white",
                    "shadow-md",
                    "dark:bg-gray-900",
                );
            }
        });
    });
</script>
