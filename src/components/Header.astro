---
import ThemeSwitcher from "./ThemeSwitcher.jsx";
---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2 py-2"
>
    <nav
        class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center gap-4 w-[90%] md:w-1/3"
    >
        <a href="#experiencie">Experiencia</a>
        <a href="#projects">Proyectos</a>
        <a href="#about">Sobre mi</a>
        <ThemeSwitcher client:load />
    </nav>
</header>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const nav = document.querySelector("nav");

        window.addEventListener("scroll", function () {
            if (window.scrollY > window.innerHeight * 0.8) {
                nav.classList.add(
                    "backdrop-blur-sm",
                    "bg-white/80",
                    "shadow-sm",
                    "dark:bg-gray-900/80",
                );
            } else {
                nav.classList.remove(
                    "backdrop-blur-sm",
                    "bg-white/80",
                    "shadow-sm",
                    "dark:bg-gray-900/80",
                );
            }
        });
    });
</script>
